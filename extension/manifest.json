{
  "manifest_version": 3,
  "name": "Word Helper",
  "version": "1.1",
  "description": "Get word definitions and sentence meanings while reading novels or manga.",
  "permissions": ["contextMenus", "activeTab", "scripting"],
  "host_permissions": ["https://api.dictionaryapi.dev/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
